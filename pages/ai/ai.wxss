.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.messages-list {
  flex: 1;
  padding: 20rpx;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.ai .content {
  background-color: #ffffff;
}

.user .content {
  background-color: #1296db;
  color: #ffffff;
}

.input-area {
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
}

.message-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 36rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
}