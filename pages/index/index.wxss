.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* Banner样式 */
.banner {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  top: 50%;
  left: 40rpx;
  transform: translateY(-50%);
  color: #fff;
}

.banner-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 28rpx;
}

/* 风险评估报告卡片 */
.report-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.report-left {
  color: #666;
  font-size: 32rpx;
}

.report-right {
  color: #1296db;
  font-size: 28rpx;
}

/* 功能模块导航 */
.nav-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
}

/* 数据记录区域 */
.data-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.data-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.tab {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.tab.active {
  background-color: #1296db;
  color: #fff;
}

.data-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.data-title {
  display: flex;
  align-items: center;
}

.data-title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.data-add {
  color: #1296db;
  font-size: 28rpx;
}

.data-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.data-empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.data-empty text {
  color: #999;
  font-size: 28rpx;
}

/* 底部链接 */
.bottom-links {
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.link-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.link-item:last-child {
  border-bottom: none;
}

.link-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.link-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.link-item .arrow {
  color: #999;
  flex: none;
}