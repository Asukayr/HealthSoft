.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-placeholder {
  color: #999;
}

/* 服务分类 */
.service-categories {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-item text {
  font-size: 24rpx;
  color: #333;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

/* 服务列表 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
}

.service-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.service-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.service-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.book-btn {
  background-color: #1296db;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 医院列表 */
.hospital-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hospital-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
}

.hospital-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.hospital-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.hospital-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hospital-type {
  display: inline-block;
  font-size: 24rpx;
  color: #1296db;
  background-color: rgba(18, 150, 219, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}

.hospital-address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.hospital-distance {
  font-size: 24rpx;
  color: #999;
}