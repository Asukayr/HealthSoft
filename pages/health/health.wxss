.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 健康数据卡片 */
.health-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666;
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.data-item {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.data-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.data-unit {
  font-size: 20rpx;
  color: #999;
}

/* 监测记录区域 */
.record-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #1296db;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-type {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-value {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

/* 健康提醒区域 */
.reminder-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.reminder-count {
  font-size: 24rpx;
  color: #ff6b6b;
  background-color: #fff2f2;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.reminder-desc {
  font-size: 24rpx;
  color: #999;
}

.reminder-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.reminder-status.pending {
  color: #ff6b6b;
  background-color: #fff2f2;
}