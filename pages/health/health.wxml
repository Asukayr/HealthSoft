<view class="container">
  <!-- 健康数据卡片 -->
  <view class="health-card">
    <view class="card-header">
      <text class="card-title">健康数据</text>
      <text class="card-subtitle">实时监测您的健康状况</text>
    </view>
    <view class="data-grid">
      <view class="data-item">
        <text class="data-label">血压</text>
        <text class="data-value">--/--</text>
        <text class="data-unit">mmHg</text>
      </view>
      <view class="data-item">
        <text class="data-label">血糖</text>
        <text class="data-value">-.-</text>
        <text class="data-unit">mmol/L</text>
      </view>
      <view class="data-item">
        <text class="data-label">体重</text>
        <text class="data-value">--.-</text>
        <text class="data-unit">kg</text>
      </view>
      <view class="data-item">
        <text class="data-label">心率</text>
        <text class="data-value">--</text>
        <text class="data-unit">次/分</text>
      </view>
    </view>
  </view>

  <!-- 健康监测记录 -->
  <view class="record-section">
    <view class="section-header">
      <text class="section-title">监测记录</text>
      <text class="view-all">查看全部</text>
    </view>
    <view class="record-list">
      <view class="record-item">
        <view class="record-info">
          <text class="record-type">血压监测</text>
          <text class="record-time">2024-01-20 08:30</text>
        </view>
        <text class="record-value">120/80 mmHg</text>
      </view>
      <view class="record-item">
        <view class="record-info">
          <text class="record-type">血糖监测</text>
          <text class="record-time">2024-01-20 07:15</text>
        </view>
        <text class="record-value">5.6 mmol/L</text>
      </view>
    </view>
  </view>

  <!-- 健康提醒 -->
  <view class="reminder-section">
    <view class="section-header">
      <text class="section-title">健康提醒</text>
      <text class="reminder-count">2项待完成</text>
    </view>
    <view class="reminder-list">
      <view class="reminder-item">
        <image class="reminder-icon" src="../../assets/icons/medicine.png"></image>
        <view class="reminder-content">
          <text class="reminder-title">服药提醒</text>
          <text class="reminder-desc">距离下次服药还有2小时</text>
        </view>
        <text class="reminder-status pending">待完成</text>
      </view>
      <view class="reminder-item">
        <image class="reminder-icon" src="../../assets/icons/exercise.png"></image>
        <view class="reminder-content">
          <text class="reminder-title">运动提醒</text>
          <text class="reminder-desc">今日步数未达标</text>
        </view>
        <text class="reminder-status pending">待完成</text>
      </view>
    </view>
  </view>
</view>