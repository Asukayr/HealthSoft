.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.health-status {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 8rpx;
}

.status-label {
  font-size: 24rpx;
  color: #999;
}

/* 健康档案 */
.section-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #1296db;
}

.archive-list {
  display: flex;
  justify-content: space-between;
}

.archive-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.archive-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.archive-item text {
  font-size: 24rpx;
  color: #666;
}

/* 功能列表 */
.function-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-item text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.settings-item text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}