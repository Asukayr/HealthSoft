<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-info">
      <image class="avatar" src="/assets/icons/default-avatar.png"></image>
      <view class="user-detail">
        <text class="username">未登录</text>
        <text class="user-id">点击登录/注册</text>
      </view>
    </view>
    <view class="health-status">
      <view class="status-item">
        <text class="status-value">0</text>
        <text class="status-label">监测天数</text>
      </view>
      <view class="status-item">
        <text class="status-value">0</text>
        <text class="status-label">达标次数</text>
      </view>
      <view class="status-item">
        <text class="status-value">0%</text>
        <text class="status-label">达标率</text>
      </view>
    </view>
  </view>

  <!-- 健康档案 -->
  <view class="section-card">
    <view class="section-header">
      <text class="section-title">健康档案</text>
      <text class="section-more">查看完整档案 ></text>
    </view>
    <view class="archive-list">
      <view class="archive-item">
        <image src="/assets/icons/medical-history.png"></image>
        <text>既往病史</text>
      </view>
      <view class="archive-item">
        <image src="/assets/icons/family-history.png"></image>
        <text>家族病史</text>
      </view>
      <view class="archive-item">
        <image src="/assets/icons/allergy.png"></image>
        <text>过敏史</text>
      </view>
      <view class="archive-item">
        <image src="/assets/icons/medication.png"></image>
        <text>用药记录</text>
      </view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-item">
      <image src="/assets/icons/report.png"></image>
      <text>我的报告</text>
      <text class="arrow">></text>
    </view>
    <view class="function-item">
      <image src="/assets/icons/appointment.png"></image>
      <text>我的预约</text>
      <text class="arrow">></text>
    </view>
    <view class="function-item">
      <image src="/assets/icons/consultation.png"></image>
      <text>咨询记录</text>
      <text class="arrow">></text>
    </view>
    <view class="function-item">
      <image src="/assets/icons/reminder.png"></image>
      <text>健康提醒</text>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 设置列表 -->
  <view class="settings-list">
    <view class="settings-item">
      <image src="/assets/icons/settings.png"></image>
      <text>通用设置</text>
      <text class="arrow">></text>
    </view>
    <view class="settings-item">
      <image src="/assets/icons/privacy.png"></image>
      <text>隐私设置</text>
      <text class="arrow">></text>
    </view>
    <view class="settings-item">
      <image src="/assets/icons/about.png"></image>
      <text>关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>